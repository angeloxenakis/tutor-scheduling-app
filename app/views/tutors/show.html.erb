<h1><%=@tutor.name%></h1>
<h3><%=@tutor.location.name%></h3>

<ul>
    <% @tutor.subjects.each do |subject|%>
        <li><%=subject.name%></li>
    <%end%>
</ul>

<form method="GET" action="/tutors/<%=@tutor.id%>/edit">
    <input type="submit" value="Edit Tutor">
</form><br>

<form method="POST" action="/tutors/<%=@tutor.id%>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete">
</form><br><br><br>

<form method="GET" action="/tutors">
    <input type="submit" value="<-- Back to Tutors">
</form>